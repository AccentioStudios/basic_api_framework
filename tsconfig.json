  {
    "compilerOptions": {
      "target": "ESNEXT",
      "module": "ESNext",
      "lib": ["ES2020"],
      "outDir": "./dist",
      "rootDir": "./src",    
      "strict": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "declarationMap": true
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "./demo"
    ]
  }

  